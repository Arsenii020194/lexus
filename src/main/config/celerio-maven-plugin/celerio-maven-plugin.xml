<?xml version="1.0" encoding="UTF-8"?>
<celerio xmlns="http://www.jaxio.com/schema/celerio" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://www.jaxio.com/schema/celerio ./celerio.xsd">
    <configuration rootPackage="ru.ssau.lexus" jpaUseCatalog="TRUE" jpaUseSchema="TRUE">

        <dateMappings>
            <dateMapping columnJdbcType="TIMESTAMP" mappedType="M_INSTANT"/>
            <dateMapping columnJdbcType="DATE" mappedType="M_LOCALDATE"/>
        </dateMappings>
        <defaultManyToOneConfig fetch="LAZY"/>
        <defaultOneToManyConfig fetch="LAZY"/>
        <defaultOneToOneConfig fetch="LAZY"/>
        <defaultManyToManyConfig fetch="LAZY"/>

        <conventions>
            <wellKnownFolders>
                <wellKnownFolder wellKnownFolder="JAVA" generatedFolder="/target"/>
            </wellKnownFolders>
        </conventions>


    </configuration>

</celerio>